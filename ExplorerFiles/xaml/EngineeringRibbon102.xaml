<?xml version="1.0" encoding="ISO-8859-1" standalone="no" ?>
<RibbonSplitButton xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:SimExplorer="clr-namespace:Kongsberg.KSpice.SimExplorer;assembly=SimExplorer" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <RibbonGallery ScrollViewer.VerticalScrollBarVisibility="Hidden">
    <RibbonGalleryCategory Background="White">
      <RibbonGalleryCategory.HeaderTemplate>
        <DataTemplate>
          <TextBlock Background="White" Margin="4" MaxWidth="300" Text="To create a named view, zoom to an area of interest and click on the Zoom View button. Give the view a name and click Apply. The named view will now be included in the Zoom View menu." TextWrapping="Wrap"/>
        </DataTemplate>
      </RibbonGalleryCategory.HeaderTemplate>
    </RibbonGalleryCategory>
  </RibbonGallery>

</RibbonSplitButton>
